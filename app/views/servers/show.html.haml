- content_for :title, @server.name_for_ui
%table.table.table-sm.card-body
  %tbody
    %tr
      %th Name:
      %td= @server.name_for_ui
    %tr
      %th Last Login At:
      %td= dt(@server.last_login_at) || "â€“"
    %tr
      %th Created At:
      %td= dt @server.created_at, format: :long
