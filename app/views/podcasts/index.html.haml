.container
  %h1
    Podcasts
  %table.table
    %thead
      %tr
        %th Title
        %th Owner
        %th Published
        %th Actions
    %tbody
      - @podcasts.each do |podcast|
        %tr
          %td= link_to podcast.title, podcast_path(podcast)
          %td= podcast.owner&.name_for_ui || '–'
          %td= dt(podcast.published_at) || '–'
          %td
            = link_to 'Edit', edit_podcast_path(podcast, return_to: request.fullpath), class: "btn btn-sm btn-secondary"
            = link_to 'Delete', podcast_path(podcast), data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: "btn btn-sm btn-danger"
  = link_to 'New Podcast', new_podcast_path, class: "btn btn-primary mt-3"