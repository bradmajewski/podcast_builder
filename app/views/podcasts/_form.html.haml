.card-body
  = f.input :title, label: "Title"
  = f.input :description, label: "Description"
  = f.association :owner, label_method: :name_for_ui, value_method: :id
  = f.input :cover_art, label: "Cover Art", as: :file

.card-footer
  = f.button :submit, "Save", class: "card-btn-save"
  = link_to "Cancel", return_to_path(podcasts_path), class: "card-btn-cancel"
  - unless f.object.new_record?
    = link_to "Delete", f.object, data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: "card-btn-delete"